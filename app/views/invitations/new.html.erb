<h1>Request reservation</h1>
<div>
  <%= form_for @invitation, url: invitations_path, html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= f.label :user_email, "Email", class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :user_email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Request reservation", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>